
.bg-img, .bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  /* right: 0;
  bottom: 0;
  margin: 0;
  padding: 0; */
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(20px);
}

.main {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  color: #fff;
  padding: 40rpx 60rpx;
  box-sizing: border-box;
}

.main .song-icons {
  width: 100%;
  color: #fff;
  align-self: start;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}


.main .song-icons .like .img {
  width: 60rpx;
  height: 60rpx
}

.main .song-icons .info {
  width: 80%;
}

.main .song-icons .song-name {
  
  font-size: 50rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; */
}

.main .song-icons .artist {
  font-size: 30rpx;
}

.main .process {
  width: 100%;
  margin-top: 20rpx;
}

.main .process .sliber {
  padding: 10px 4px 2px 8px;
  margin: 0;
}

.main .process .time {
  display: flex;
  justify-content: space-between;
  color: #fff;
  font-size: 28rpx;
}

.main .tab-function {
  /* flex: 1; */
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  
}

.main .tab-function .tab .img {
  width: 60rpx;
  height: 60rpx;
}

.main .tab-function .tab.play .img {
  width: 80rpx;
  height: 80rpx;
}

.main .tab-function .tab.paruse .img {
  width: 140rpx;
  height: 140rpx;
}

