page {
  padding: 0 24rpx;
  box-sizing: border-box;
  padding-right: 16rpx;
}

.title {
  font-size: 50rpx;
  margin-bottom: 52rpx;
}

.content {
  font-size: 34rpx;
  text-indent: 2em;
  
}

.tabbar {
  
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: -4rpx;
}

.tabbar .pre, .tabbar .next, .tabbar .directory {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  /* flex: 1; */
  text-align: center;
  color: #666;
  padding: 10rpx 64rpx;
  border: 1px solid #999;
  border-radius: 30rpx;
}