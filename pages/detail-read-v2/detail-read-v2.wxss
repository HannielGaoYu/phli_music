page {
  position: relative;
  /* overflow: hidden; */
  /* overflow:scroll; */
}

.main-title {
  font-size: 42rpx;
  text-align: center;
  margin-bottom: 32rpx;
}

.book-show {
  display: flex;
  margin-bottom: 42rpx;
  /* align-items: center; */
  padding: 0 20rpx;
}

.book-show .img image {
  width: 180rpx;
}

.book-show .info {
  font-size: 32rpx;
  color: #333;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  margin-left: 24rpx;
  margin-top: -36rpx;

}

.book-bar {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  padding: 0 20rpx;
  padding-bottom: 26rpx;
  border-bottom: 18rpx solid #e6e7e8;
  margin-bottom: 28rpx;
}
.book-bar .add {
  /* flex-grow: 1; */
  color: #000;
  padding: 10rpx 28rpx;
  text-align: center;
  border: 1px solid #999;
  border-radius: 16rpx;
}
.book-bar .read {
  /* flex-grow: 2; */
  color: #fff;
  padding: 10rpx 90rpx;
  text-align: center;
  background-color: #f3c258;
  border: 1px solid #f3c258;
  border-radius: 16rpx;
}
.book-bar .Download {
  /* flex-grow: 1; */
  color: #000;
  padding: 10rpx 28rpx;
  text-align: center;
  border: 1px solid #999;
  border-radius: 16rpx;
}

.dec {
  padding: 0 24rpx;
  padding-bottom: 56rpx;
  border-bottom: 18rpx solid #e6e7e8;
  margin-bottom: 26rpx;
}
.dec .title {
  font-size: 36rpx;
  font-weight: 700;
  text-align-last: left;
  margin-bottom: 30rpx;
}

.dec .book-dec {
  font-size: 32rpx;
  line-height: 55rpx;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.booklist {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  padding-bottom: 26rpx;
  border-bottom: 18rpx solid #e6e7e8;
  margin-bottom: 30rpx;
}

.booklist .title {
  font-size: 36rpx;
  font-weight: 700;
}

.booklist .right-row image {
  width: 46rpx;
}

.booklist .listlength {
  font-size: 28rpx;
  color: #666;
  margin-left: -300rpx;
}

.directory-list {
  position: fixed;
  left: 0;
  top: 0px;
  width: 80%;
  /* height: 667px; */
  overflow: hidden;
  overflow-y: scroll;
  background-color: #fff;
}

.content-preview {
  padding: 0 24rpx;
}

.content-preview .preview{
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 40rpx;
}

