.menu-item {
  display: inline-block;
  width: 220rpx;
}
.menu-item .album {
  position: relative;
}
.menu-item .album .img image {
  border-radius: 20rpx;
  width: 220rpx;
}
.menu-item .album .playcount {
  position: absolute;
  bottom: 10rpx;
  right: 7rpx;
  font-size: 24rpx;
  color: #fff;
  padding: 2rpx 6rpx;
  opacity: 0.9;
  background-color: #333;
  border-radius: 10rpx;
}
.menu-item .text {
  width: 100%;
  font-size: 26rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}